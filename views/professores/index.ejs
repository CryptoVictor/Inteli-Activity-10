<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Gestão de Professores</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 30px;
      background-color: #f8f9fa;
    }

    h1, h2 {
      color: #343a40;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 20px;
      background-color: white;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.05);
    }

    th, td {
      padding: 12px;
      border: 1px solid #dee2e6;
      text-align: left;
    }

    th {
      background-color: #343a40;
      color: white;
    }

    tr:nth-child(even) {
      background-color: #f1f1f1;
    }

    input {
      padding: 6px;
      margin: 4px 2px;
      border: 1px solid #ccc;
      border-radius: 4px;
    }

    button {
      padding: 6px 12px;
      margin: 4px 2px;
      background-color: #007bff;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }

    button:hover {
      background-color: #0056b3;
    }

    form {
      display: inline-block;
    }

    form[action^="/professores"] {
      margin-bottom: 10px;
    }
  </style>
</head>
<body>
  <h1>Professores Cadastrados</h1>

  <table>
    <thead>
      <tr>
        <th>Nome</th>
        <th>Email</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% professores.forEach(prof => { %>
        <tr>
          <td><%= prof.nome %></td>
          <td><%= prof.email %></td>
          <td>
            <form action="/professores/delete/<%= prof.id %>" method="POST">
              <button type="submit">Deletar</button>
            </form>
            <form action="/professores/edit/<%= prof.id %>" method="POST">
              <input name="nome" placeholder="Novo nome" required />
              <input name="email" placeholder="Novo email" required />
              <button type="submit">Editar</button>
            </form>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>

  <h2>Cadastrar Novo Professor</h2>
  <form action="/professores" method="POST">
    <input name="nome" placeholder="Nome" required />
    <input name="email" placeholder="Email" required />
    <button type="submit">Cadastrar</button>
  </form>
</body>
</html>
